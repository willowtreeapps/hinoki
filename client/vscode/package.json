{
  "name": "vscode-brightscript",
  "version": "0.0.1",
  "description": "BrightScript language support for Visual Studio Code.",
  "main": "./lib/extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/willowtreeapps/brightscript-languageserver"
  },
  "author": "WillowTree Apps, Inc",
  "publisher": "willowtreeapps",
  "license": "Apache-2.0",
  "engines": {
    "vscode": ">=1.16.0"
  },
  "dependencies": {
    "brightscript-languageserver": "file:../../server",
    "vscode": "1.1.5",
    "vscode-languageclient": "3.4.5"
  },
  "devDependencies": {
    "@types/node": "8.0.31"
  },
  "activationEvents": [
    "onLanguage:brightscript"
  ],
  "scripts": {
    "compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "vscode:prepublish": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "contributes": {
    "languages": [
      {
        "id": "brightscript",
        "aliases": [
          "BrightScript",
          "brs"
        ],
        "extensions": [
          ".brs"
        ]
      }
    ],
    "grammars": [
      {
        "language": "brightscript",
        "scopeName": "source.brightscript",
        "path": "./BrightScript.tmLanguage"
      }
    ]
  }
}
